{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
             <h1 class="page-header">Groups list</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a href="{{ path('group_new') }}" class="btn btn-primary">Create a new group</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Code</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for group in groups %}
                        <tr>
                            <td><a href="{{ path('group_show', { 'id': group.id }) }}">{{ group.id }}</a></td>
                            <td>{{ group.name }}</td>
                            <td>{{ group.code }}</td>
                            <td>
                                <a href="{{ path('group_show', { 'id': group.id }) }}">show</a> |
                                <a href="{{ path('group_edit', { 'id': group.id }) }}">edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
